<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    @*Experimenting with different styles, first one is the original layout*@
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">*@
    <link rel="stylesheet" href="https://bootswatch.com/united/bootstrap.min.css">

    <link href="~/Content/weather-icons.min.css" rel="stylesheet" />
    <link href="~/Content/weather-icons-wind.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/coolclock.js"></script>
    <script type="text/javascript" src="~/Scripts/moreskins.js"></script>
    <script type="text/javascript" src="~/Scripts/jQuery.runner.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>

    <script src="~/app/UserFormApp.js"></script>
    <script src="~/app/homeController.js"></script>
    <script src="~/app/UserForm/userController.js"></script>
    <script src="~/app/LoginForm/loginController.js"></script>
    <script src="~/app/dataService.js"></script>


</head>
<body ng-app="userFormApp">

    <nav class="navbar navbar-default main-navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Frontend Home", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("MixItUp", "Index", "MixItUp")</li>
                    <li>@Html.ActionLink("DataTable", "Index", "DataTable")</li>
                    <li>@Html.ActionLink("Weather", "Index", "Weather")</li>
                    <li>@Html.ActionLink("Clock", "Index", "Clock")</li>

                </ul>

                <div ng-controller="homeController">
                    <login-menu></login-menu>
                </div>
            </div>
        </div>
    </nav>
    <div class="container innerbody">
        @RenderBody()
    </div>

</body>
</html>