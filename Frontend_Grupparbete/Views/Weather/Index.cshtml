    .weathericon {
        font-size: 4em;
        margin-top: 10px;
        margin-bottom: 10px;
    }
    .weathericon-hourly {
        /*font-size: 2em;
        line-height: 2em;*/
    }
    .daily-div {
        text-align: center;
    }
    #daily hr {
        margin-bottom: 10px;
        margin-top: 10px;
    }
    .center-day-and-icon {
        text-align: center;
    }
    .col-split:first-of-type {
        padding-right: 0;
    }
    .col-split:last-of-type {
        padding-left: 0;
    }
